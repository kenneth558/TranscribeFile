        net_str = f"Net: {net_speed:5.1f}MB/s "
        net_position = cpu_position - len(net_str)
        sys.stdout.write(f"\033[{net_position}G{net_str}")
    
    sys.stdout.write(f"\033[{cpu_position}G{resource_str}")
    sys.stdout.flush()
